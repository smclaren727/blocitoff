<h2><%= "this is the edit partial" %></h2>

<%= form_for [current_user, Item.new], remote: true do |f| %>
  <div class='form-group'>
    <%= f.label :Item %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Add a new item.' %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>